<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/btn_them"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Item thêm"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/btnThem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_them"
            android:hint="Mô tả thêm"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_them"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnThem"
            android:text="Thêm" />

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_them"
            android:layout_marginTop="20dp" />
        <ImageView
            android:id="@+id/imageviewHinh"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="180dp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textviewTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageviewHinh"
            android:text=" Tên "
            android:textColor="#152EBA"
            android:textSize="25dp"
            android:layout_marginTop="180dp"
            android:textStyle="bold" />




        <TextView
            android:id="@+id/textviewMoTa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewTen"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/imageviewHinh"
            android:text="Mô tả"
            android:textColor="#152EBA"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cong"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="250dp"
            android:layout_toRightOf="@+id/imageviewHinh"
            android:background="@drawable/boder"
            android:padding="2dp"
            android:text="+"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tru"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_below="@+id/imageviewHinh"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imageviewHinh"
            android:background="@drawable/boder"
            android:padding="3dp"
            android:text="-"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageviewHinh"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageviewHinh"
            android:text="1000000$"
            android:textColor="#3F51B5"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>